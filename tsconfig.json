{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@components/*": ["src/modules/shared/components/*"],
      "@shared/*": ["src/modules/shared/*"]
    }
  },
  "include": ["src/**/*", "src/modules/App.tsx"],
  "exclude": ["node_modules"]
}
